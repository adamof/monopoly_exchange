<div class="row">
  <div class="span10 offset1">
    <% @cards.each do |color,entries| %>
      <div class="span3">
        <div id="round-corners" style="background-color: #<%= CardType::COLOURS[color] %>;">
          </div>
          <div class="btn-group" data-toggle="buttons-checkbox">
          <% entries.each do |entry| %>
            <label class="checkbox">
              <input type="checkbox" name="<%= entry.id %>"> <%= "#{entry.name} (#{entry.cards.count})" %>
            </label>
          <% end -%>
        </div>
      </div>
    <% end -%>
  </div>
</div>
<div class="row" align="center">
  <input id="email" type="text" placeholder="Type your e-mail...">
</div>
<div class="row">
  <div class="pagination" align="center">
